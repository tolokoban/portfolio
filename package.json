{
    "name": "portfolio",
    "version": "1.0.0",
    "description": "Tolokoban's portfolio",
    "main": "index.js",
    "scripts": {
        "optimize": "node scripts/optimize-images.mjs",
        "routes": "build-react-routes ./src/app",
        "generate": "npm run optimize && npm run routes",
        "start": "webpack serve --mode development",
        "prebuild": "npm run optimize",
        "build": "MODE=production webpack --mode production",
        "predeploy": "npm run build",
        "deploy": "gh-pages -d build",
        "test": "jest",
        "test:watch": "jest --watch",
        "clean": "rm -rvf src/generated"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tolokoban/snapshot-annotation.git"
    },
    "keywords": [
        "snapshot",
        "help",
        "annotation"
    ],
    "author": "Tolokoban",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/tolokoban/snapshot-annotation/issues"
    },
    "homepage": "https://github.com/tolokoban/snapshot-annotation#readme",
    "dependencies": {
        "@tolokoban/react-state": "^0.3.0",
        "@tolokoban/tgd": "file:../game/tgd2",
        "@tolokoban/type-guards": "^0.6.0",
        "colord": "^2.9.3",
        "markdown-to-jsx": "^7.5.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@mdx-js/loader": "^3.1.0",
        "@testing-library/jest-dom": "^6.6.2",
        "@testing-library/user-event": "^14.5.2",
        "@types/jest": "^29.5.13",
        "@types/mdx": "^2.0.13",
        "@types/node": "^22.7.7",
        "@types/opentype.js": "^1.3.8",
        "@types/react": "^18.3.11",
        "@types/react-dom": "^18.3.1",
        "babel-jest": "^29.7.0",
        "babel-loader": "^9.2.1",
        "build-react-routes": "^0.10.3",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^12.0.2",
        "css-loader": "^6.11.0",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsdoc": "^50.4.3",
        "eslint-plugin-jsx-a11y": "^6.10.1",
        "eslint-plugin-no-null": "^1.0.2",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-react": "^7.37.1",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-unicorn": "^56.0.0",
        "file-loader": "^6.2.0",
        "gh-pages": "^6.2.0",
        "html-webpack-plugin": "^5.6.2",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "make-dir": "^5.0.0",
        "mini-css-extract-plugin": "^2.9.1",
        "opentype.js": "^1.3.4",
        "prettier": "^3.3.3",
        "sharp": "^0.33.5",
        "style-loader": "^3.3.4",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.3",
        "url-loader": "^4.1.1",
        "webpack": "^5.95.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.1.0",
        "webpack-manifest-plugin": "^5.0.0",
        "webpack-shell-plugin-next": "^2.3.2",
        "workbox-webpack-plugin": "^7.1.0"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "jest": {
        "testEnvironment": "jsdom",
        "moduleFileExtensions": [
            "tsx",
            "ts",
            "js",
            "jsx",
            "wasm"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testMatch": [
            "**/*.(test|spec).(ts|tsx)"
        ],
        "globals": {
            "ENV_VARIABLES": {}
        },
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1",
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/mocks.js",
            "\\.(css|less)$": "<rootDir>/__mocks__/mocks.js",
            "\\.(py|sh|txt|bin)$": "<rootDir>/__mocks__/mocks.js"
        },
        "verbose": true,
        "collectCoverage": true,
        "coverageReporters": [
            "lcov"
        ],
        "coverageDirectory": "test-coverage",
        "coverageThreshold": {
            "global": {
                "branches": 0,
                "functions": 0,
                "lines": 0,
                "statements": 0
            }
        }
    },
    "port": 46644
}
